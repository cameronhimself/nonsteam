{
  "name": "nonsteam",
  "version": "0.2.0",
  "description": "A tool and library for viewing and editing your non-Steam game entries from the command line or with code.",
  "license": "ISC",
  "author": "J. Cameron McDonald",
  "type": "module",
  "files": [
    "dist/bundle/**/*"
  ],
  "main": "dist/bundle/index.js",
  "bin": "dist/bundle/cli.js",
  "scripts": {
    "build:bundle": "rollup -c --bundleConfigAsCjs --environment entry:bundle",
    "prebuild:executable": "rollup -c --bundleConfigAsCjs --environment entry:executable",
    "build:executable": "tsx scripts/build.ts",
    "clean:bundle": "rimraf dist/bundle",
    "clean:executable": "rimraf dist/executable",
    "clean:all": "rimraf dist",
    "build": "npm run clean:all && npm run build:bundle && npm run build:executable",
    "prepack": "npm run clean:bundle && npm run build:bundle",
    "test:file": "mocha -r tsx",
    "test": "npm run test:file src/**/*.test.ts src/*.test.ts"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/chai": "^5.2.1",
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.2",
    "@yao-pkg/pkg": "^6.4.1",
    "chai": "^5.2.0",
    "compressing": "^1.10.1",
    "jest": "^29.7.0",
    "release-it": "^19.0.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.1",
    "ts-jest": "^29.3.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "mkdirp": "^3.0.1",
    "regedit": "^5.1.4",
    "tmp-promise": "^3.0.3"
  }
}
