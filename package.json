{
  "name": "nonsteam",
  "version": "0.1.0-beta1",
  "description": "A tool and library for viewing and editing your non-Steam game entries from the command line or with code.",
  "license": "ISC",
  "author": "J. Cameron McDonald",
  "type": "module",
  "files": ["dist/bundle/**/*"],
  "main": "dist/bundle/index.js",
  "bin": "dist/bundle/cli.js",
  "scripts": {
    "build:bundle": "rollup -c --bundleConfigAsCjs --environment entry:bundle",
    "prebuild:executable": "rollup -c --bundleConfigAsCjs --environment entry:executable",
    "build:executable": "pkg -c pkg.config.json dist/executable/packaged.js --out-dir dist --no-bytecode --public --public-packages '*'",
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:bundle && npm run build:executable",
    "prepack": "npm run clean && npm run build:bundle",
    "test": "jest"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.15.2",
    "@yao-pkg/pkg": "^6.4.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.40.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "regedit": "^5.1.4",
    "tmp-promise": "^3.0.3"
  }
}
